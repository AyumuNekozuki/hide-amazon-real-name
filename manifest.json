{
    "manifest_version": 2,
    "name": "Hide Amazon RealName",
    "version": "1.0.0",
    "description": "配信中にAmazonのリアルネームが表示される現象を阻止します( ｰ`дｰ´)ｷﾘｯ",
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.co.jp/*"
            ],
            "css":[
                "main.css"
            ],
            "js": [
                "jquery-3.5.1.min.js","main.js"
            ]
        }
    ],
    "permissions": [
        "storage"
      ]
}